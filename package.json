{
  "name": "duty-app-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run start --filter=frontend --filter=backend --parallel",
    "start": "turbo start",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:setup": "npm run db:setup --workspace=scripts",
    "prod": "turbo run build --filter=frontend --filter=backend && turbo run start --filter=frontend --filter=backend --parallel"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
